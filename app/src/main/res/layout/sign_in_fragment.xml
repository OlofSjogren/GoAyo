<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/singInFragment_background_animation"
        android:background="@drawable/gradient_list">

        <TextView
            android:id="@+id/signInFragment_logo_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="cursive"
            android:text="Debtify"
            android:textColor="#FFFFFF"
            android:textSize="80sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewBackground"
            android:layout_width="313dp"
            android:layout_height="450dp"
            android:background="@drawable/rounded_corner_box"
            android:elevation="4sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/signUpFragment_sign_up_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4sp"
            android:text="Log in"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/signInFragment_phone_number_field_editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewBackground" />

        <EditText
            android:id="@+id/signInFragment_password_field_editText"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:elevation="4sp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/signInFragment_sign_in_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/signInFragment_sign_in_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/logInBlue"
            android:elevation="4sp"
            android:text="LOG IN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toTopOf="@+id/signInFragment_sign_up_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/signInFragment_sign_up_button"
            android:layout_width="145dp"
            android:layout_height="46dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@color/registerGreen"
            android:elevation="4sp"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signInFragment_phone_number_field_editText"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:elevation="4sp"
            android:hint="Phone Number"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/signInFragment_password_field_editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>